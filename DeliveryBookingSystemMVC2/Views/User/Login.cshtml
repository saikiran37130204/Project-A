
@model DeliveryBookingSystemMVC2.Models.User

@{ ViewData["Title"] = "Login"; }
<h1>Choose an option for Logging in</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserType" class="control-label"></label>
                <br />
                @Html.RadioButton("UserType", "Customer")<label>User</label>
                <br />
                @Html.RadioButton("UserType", "Executive")<label>Executive</label>
                <br />
                @Html.RadioButton("UserType", "Admin")<label>Admin</label>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



